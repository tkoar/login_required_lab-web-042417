<%= form_tag ({controller: 'sessions', action: 'create', method: 'post' }) do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, nil, placeholder: "First-name Last-name" %>
  <br>
  <%= label_tag :email %>
  <%= text_field_tag :email, nil, placeholder: "email@domain.com" %>
  <br>
  <%= submit_tag "sign-in" %>
  <% end %>
